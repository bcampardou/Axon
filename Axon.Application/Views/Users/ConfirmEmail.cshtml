@model Axon.Application.Controllers.UsersController.BooleanResponseModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Axon - Account Activation</title>
</head>
<body style="height:100vh; width:100vw;background-color:#FFD97C;display:flex;align-items:center;justify-content:center;">
    <div style="text-align:center; color:#FFD97C; background-color:#fff; padding:50px; border-radius:0;font-variant:small-caps;color: #0d0d0d;
    font-family: 'Montserrat','Trebuchet MS','Lucida Grande','Lucida Sans Unicode','Lucida Sans',Tahoma,sans-serif;font-size: 33px;font-weight:600;">
        @if (Model.Success)
        {
            <span>Your account is now activated.</span>
        }
        else
        {
            <span>Failed to activate your account.</span>
        }
        <div>
            <a href="@Model.Url" style="text-decoration: none;
    display: inline-block;
    color: #ffffff;
    background-color: #fbc02d;
    border-radius: 50px;
    font-weight:300;
    font-size:16px;
    width: auto;
    width: auto;
    border-top: 1px solid #fbc02d;
    border-right: 1px solid #fbc02d;
    border-bottom: 1px solid #fbc02d;
    border-left: 1px solid #fbc02d;
    padding: 10px;
    margin-top: 50px;
    padding-top: 15px;
    padding-bottom: 15px;
    font-family: 'Montserrat','Trebuchet MS','Lucida Grande','Lucida Sans Unicode','Lucida Sans',Tahoma,sans-serif;
    text-align: center;
    word-break: keep-all;">BACK TO AXON</a>
        </div>
    </div>
</body>
</html>
